@import "../../app.wxss";

.wrap{
    background: #EAEEEF;
    width: 100%;
    height: 100%;
    padding-top: 10px;
    overflow: hidden;
}
.wrap .class_item{
    width: 46%;
    height: 90px;
    background: rgb(155, 152, 159);
    border: 1px solid grey;
    opacity: .5;
    border-radius: 10px;
    margin:10px 6px;
    float: left;
}
.wrap .class_item .item_title{
    border-bottom: 1px solid grey;
    background: rgb(119, 117, 121);
    border-radius:10px 10px  0 0px;
}
.item_body{
    color:#fff;
    text-align: center;
    padding: 10px;
}